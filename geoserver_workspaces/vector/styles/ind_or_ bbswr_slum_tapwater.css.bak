/* @title Drinking water is not supplied */
[pipe_drinking_water="no supply"] {
  stroke: #b57d0e;
  stroke-width: 0.5;
  fill: #feba6f;
  fill-opacity: 1;
}


/* @title Drinking water is 0.5-1 km */
[pipe_drinking_water="0.5 to 1.0km"] {
  stroke: #a53c04;
  stroke-width: 0.5;
  fill: #ed6e43;
  fill-opacity: 1;
}

/* @title Drinking water is closer than 0.5 km */
[pipe_drinking_water="Less than 0.5km"] {
  stroke: #6c0001;
  stroke-width: 0.5;
  fill: #d7191c;
  fill-opacity: 1;
}

/* @title Not regularly accessible */
[pipe_drinking_water="not regular"] {
  stroke: #9f9700;
  stroke-width: 0.5;
  fill: #ffe8a5;
  fill-opacity: 1;
}

/* @title Accessible, once a week */
[pipe_drinking_water="Once a week"] {
  stroke: #05ba02;
  stroke-width: 0.5;
  fill: #9ef57c;
  fill-opacity: 1;
}

/* @title 17 - Accessible, twice a week */
[pipe_drinking_water="twice a week"] {
  stroke: #045716;
  stroke-width: 0.5;
  fill: #12b340;
  fill-opacity: 1;
}

/* @title 17 - Accessible, less than 1 hour a day */
[pipe_drinking_water="Less than 1 hour daily"] {
  stroke: #045716;
  stroke-width: 0.5;
  fill: #12b340;
  fill-opacity: 1;
}

/* @title 17 - Accessible, more than 2 hours a day */
[pipe_drinking_water="more than 2 hours daily"] {
  stroke: #045716;
  stroke-width: 0.5;
  fill: #12b340;
  fill-opacity: 1;
}